generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  display_name String
  email String @unique
  password String
  transactions Transaction[]
  bills Bill[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Transaction {
  id Int @id @default(autoincrement())
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id Int
  amount Decimal
  description String
  type TransactionType
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum BillStatus {
  PENDING
  PAID
  OVERDUE
}

model Bill {
  id Int @id @default(autoincrement())
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id Int
  amount Decimal
  description String
  due_date DateTime
  status BillStatus
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}